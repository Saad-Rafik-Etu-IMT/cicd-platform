# ========================================
# CI/CD Platform - Environment Variables
# ========================================

# Server Configuration
PORT=3002
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3002

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cicd_db
POSTGRES_USER=cicd_user
POSTGRES_PASSWORD=cicd_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Pipeline Mode: 'simulate' for demo, 'real' for production
PIPELINE_MODE=simulate

# GitHub OAuth - Get from https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# JWT Secret - Change in production!
JWT_SECRET=cicd-platform-jwt-secret-change-me

# GitHub Webhook Secret
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# VM Configuration (SSH) - For real deployment
VM_HOST=192.168.1.100
VM_USER=deployer
SSH_KEY_PATH=/app/ssh/vm_deployer

# SonarQube Configuration
# SONAR_URL: Internal Docker network address (for backend-to-SonarQube)
SONAR_URL=http://sonarqube:9000
SONAR_TOKEN=
# SONAR_EXTERNAL_URL: External browser-accessible URL (mapped port)
SONAR_EXTERNAL_URL=http://localhost:9001

# Application Repository
APP_REPO_URL=https://github.com/Saad-Rafik-Etu-IMT/demo.git
