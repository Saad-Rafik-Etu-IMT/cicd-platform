# ========================================
# CI/CD Platform - Environment Variables
# ========================================
# Copy this file to .env and fill in your configuration
# cp .env.example .env

# Server Configuration
PORT=3002
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3002

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cicd_db
POSTGRES_USER=cicd_user
POSTGRES_PASSWORD=cicd_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Pipeline Mode: 'simulate' for demo, 'real' for production
PIPELINE_MODE=real

# GitHub OAuth - Get from https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# JWT Secret - Generate a secure random string!
# PowerShell: $bytes = New-Object byte[] 32; [Security.Cryptography.RNGCryptoServiceProvider]::Create().GetBytes($bytes); [Convert]::ToBase64String($bytes)
JWT_SECRET=change-this-to-a-secure-random-string

# GitHub Webhook Secret (optional, for webhook mode)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# VM Configuration (SSH) - For real deployment
VM_HOST=192.168.59.130
VM_USER=yuzhe

# SonarQube Configuration
SONAR_URL=http://sonarqube:9000
SONAR_EXTERNAL_URL=http://localhost:9001
SONAR_TOKEN=

# Application Repository
APP_REPO_URL=https://github.com/Saad-Rafik-Etu-IMT/demo.git

# Git Polling (interval in milliseconds, 5000 = 5 seconds)
GIT_POLLING_INTERVAL=5000
GIT_POLL_INTERVAL=5000
