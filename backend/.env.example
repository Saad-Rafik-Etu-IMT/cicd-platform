# Server
PORT=3001
FRONTEND_URL=http://localhost:3000

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cicd_platform
POSTGRES_USER=cicd
POSTGRES_PASSWORD=cicd_secret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Pipeline Mode: 'simulate' for demo, 'real' for production
PIPELINE_MODE=simulate
WORKSPACE_DIR=/tmp/pipelines

# VM SSH (for real deployment)
VM_HOST=192.168.1.100
VM_USER=deploy
VM_SSH_PORT=22
# VM_SSH_PRIVATE_KEY should contain the private key content

# SonarQube (optional)
# SONAR_HOST_URL=http://sonarqube:9000
